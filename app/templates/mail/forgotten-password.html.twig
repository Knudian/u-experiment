{% extends 'email.html.twig' %}
{% block body %}
    <table cellspacing="0" style="width:700px;">
        <tr>
            <td align="center">
                <table width="100%" cellspacing="0" cellpadding="0">
                    <tr style="background-color: rgb(220, 0, 49);">
                        <td align="center" style="padding: 20px ;">
                            <p style="color: rgb(255, 248, 250); font-size: 33px; font-family: arial; line-height: 39px; margin: 0px;">
                                <strong>Réinitialisation du mot de passe</strong>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size : 20px;background-color: #5f5f5f;padding: 10px 30px;color: white;margin: 0 auto;top: 11px;text-transform: uppercase;">
                            {% block header %}  {% endblock %}
                        </td>
                    </tr>
                </table>
                <table width="100%" style="background-color: rgb(255, 255, 255);" cellspacing="0" cellpadding="0">
                    <tr>
                        <td style="padding: 20px;">
                            <table width="100%" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="center" style="padding: 20px ;">
                                        <h1 style="font-weight: normal;">{% block title %}{% endblock %}</h1>
                                    </td>
                                </tr>
                            </table>

                            <table style="padding: 0 75px; font-size: 15px; font-family: 'Open Sans';"></table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellspacing="0" cellpadding="0">
                    <tr>
                        <td align="center">
                            ©️ Wise
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}

{% block css %}
    <style>
        @font-face {
            font-family: "Titillium Web";
            src: url('https://fonts.googleapis.com/css?family=Titillium+Web');
        }

        html {
            font-family: Titillium Web, Helvetica, Arial, sans-serif;
        }

        #email {
            max-width: 600px;
            background-color: #efefef;
            padding: 20px;
        }

        #content {
            background-color: white;
            box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
            margin: 15px 0;
            padding: 20px;
        }

        #content p {
            font-size: 17px;
            margin: 15px 0;
        }

        .line {
            border-top: 1px solid black;
            margin-bottom: 15px;
            width: 100%;
        }

        #footer {
            color: white;
            display: inline-flex;
            height: 100px;
            width: 100%;
        }

        #footer a {
            color: white;
        }

        #footer p {
            margin: 5px 0;
        }

        .link {
            font-weight: bold;
        }

        hr {
            margin: 30px 0;
        }
    </style>

{% endblock %}
